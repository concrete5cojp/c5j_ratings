<?xml version="1.0" encoding="UTF-8"?>
<schema
        xmlns="http://www.concrete5.org/doctrine-xml/0.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
    <table name="btC5jRatings">
        <field name="bID" type="integer">
            <unsigned />
            <key />
        </field>
        <field name="btnType" type="string" size="16"/>
        <field name="displayRatings" type="boolean" />
    </table>

    <table name="C5jRatings">
        <field name="bID" type="integer"><unsigned/><key/></field>
        <field name="uID" type="integer"><unsigned/><key/></field>
        <field name="ratedValue" type="smallint"/>
        <field name="ratedAt" type="datetime"><notnull/></field>
    </table>
</schema>
